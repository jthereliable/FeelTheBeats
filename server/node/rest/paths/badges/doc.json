{
	"title": "Retrieve a list of badges",
	"path": "/badges/?",
	"methods": [
		{
			"method": "post",
			"notes": "Create new badge",
			"parameters": [
				{
					"name": "token",
					"notes": "User token. Moderator required.",
					"required": true
				},
				{
					"name": "song_id",
					"notes": "Song id. (not required for special badges)",
					"required": false
				},
				{
					"name": "name",
					"notes": "Badge name",
					"required": true
				}
			],
			"success": {
				"notes": "Success output notes",
				"example": {
					"success": true,
					"id": 1
				}
			},
			"error": {
				"notes": "Error output notes",
				"example": {
					"success": false,
					"error": "error message",
					"code": 1
				}
			}
		},
		{
			"method": "get",
			"notes": "Get list of badges based on search parameters.",
			"parameters": [
				{
					"name": "song_id",
					"notes": "Search badges based on song"
				},
				{
					"name": "name",
					"notes": "Search badges based on name"
				},
				{
					"name": "conditions",
					"notes": "Search badges based on conditions"
				},
				{
					"name": "order",
					"notes": "Sort by field",
					"example": "'name', 'owners', 'id', ???"
				},
				{
					"name": "sort",
					"notes": "Sorting direction",
					"example": "'asc' or 'desc'"
				},
				{
					"name": "offset",
					"notes": "Search offset"
				},
				{
					"name": "limit",
					"notes": "Search limit (max 25)"
				}
			],
			"success": {
				"notes": "Success output notes",
				"example": {
					"success": true,
					"badges": [
						"..."
					]
				}
			},
			"error": {
				"notes": "Error output notes",
				"example": {
					"success": false,
					"error": "error message",
					"code": 1
				}
			}
		}
	]
}