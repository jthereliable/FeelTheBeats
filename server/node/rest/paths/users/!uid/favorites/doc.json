{
	"title": "Retrieve user's favorite songs",
	"path": "/users/!uid/favorites/?",
	"methods": [
		{
			"method": "post",
			"notes": "Add new favorite",
			"parameters": [
				{
					"name": "token",
					"notes": "User token.",
					"required": true
				},
				{
					"name": "sid",
					"notes": "Song id",
					"required": true
				}
			],
			"success": {
				"notes": "Success output notes",
				"example": {
					"success": true
				}
			},
			"error": {
				"notes": "Error output notes",
				"example": {
					"success": false,
					"error": "error message",
					"code": 1
				}
			}
		},
		{
			"method": "get",
			"notes": "Get list of user favorite songs based on search parameters.",
			"parameters": [
				{
					"name": "owner",
					"notes": "Search songs based on owner"
				},
				{
					"name": "name",
					"notes": "Search songs based on name"
				},
				{
					"name": "genres",
					"notes": "Search songs based on genres"
				},
				{
					"name": "order",
					"notes": "Sort by field",
					"example": "'name', 'owner', 'id', 'rating_mod_quality', 'rating_mod_difficulty', 'rating_user_quality', 'rating_user_difficulty'"
				},
				{
					"name": "sort",
					"notes": "Sorting direction",
					"example": "'asc' or 'desc'"
				},
				{
					"name": "offset",
					"notes": "Search offset"
				},
				{
					"name": "limit",
					"notes": "Search limit (max 25)"
				}
			],
			"success": {
				"notes": "Success output notes",
				"example": {
					"success": true,
					"songs": [
						"..."
					]
				}
			},
			"error": {
				"notes": "Error output notes",
				"example": {
					"success": false,
					"error": "error message",
					"code": 1
				}
			}
		},
		{
			"method": "delete",
			"notes": "Delete favorite",
			"parameters": [
				{
					"name": "token",
					"notes": "User token.",
					"required": true
				},
				{
					"name": "sid",
					"notes": "Song id",
					"required": true
				}
			],
			"success": {
				"notes": "Success output notes",
				"example": {
					"success": true
				}
			},
			"error": {
				"notes": "Error output notes",
				"example": {
					"success": false,
					"error": "error message",
					"code": 1
				}
			}
		},
	]
}